extends ../layout/index

block contain
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
    
        .row
            .col-md-12
                include ../layout/partials/testimoniales
                
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje

                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", name="nombre", type="text", placeholder="Tu Nombre" class="form-control", value=nombre)
                            .form-group
                                label(for="correo") Correo
                                input(id="correo", name="correo", type="email", placeholder="Tu correo" class="form-control", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", cols="30", rows="4" class="form-control" placeholder="Tu Mensaje")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")